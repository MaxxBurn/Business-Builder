<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="50dp"
        android:id="@+id/scard"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/imageView_poster1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="KT"
            android:paddingTop="22dp"
            android:textAlignment="center" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView_name12"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/scard"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"

        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/button11"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/textView_name12"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView_release12"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textView_name12"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/scard"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button111"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/button11"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/textView_release12"
        android:background="@null"
        android:text="Back to progress"
        android:textAllCaps="false"
        android:textColor="#FF0000"
        android:textSize="14sp" />

</RelativeLayout>